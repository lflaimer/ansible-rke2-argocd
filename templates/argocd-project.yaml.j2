apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: {{ argocd_project_name }}
  namespace: {{ argocd_install_namespace }}
spec:
  sourceRepos:
  - "*"
  destinations:
  - server: https://kubernetes.default.svc
    namespace: "*"
  clusterResourceWhitelist:
  - group: "*"
    kind: "*"