apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: argocd
  namespace: kube-system
spec:
  chart: argo-cd
  repo: https://argoproj.github.io/argo-helm
  targetNamespace: {{ argocd_install_namespace }}
  version: {{ argocd_chart_version }}
  valuesContent: |-
    global:
      domain: {{ argocd_domain }}
    server:
      service:
        type: ClusterIP
      ingress:
        enabled: true
